{% extends 'base.html.twig' %}

{% block title %}
    Evento Logística y Movilidad 4.0 - Warnier
{% endblock %}


{% block description %}
    <meta name="description" content="Evento logística y Movilidad 4.0 Pazo dos Escudos, Vigo, 5 de Junio de 2019" />
{% endblock %}


{% block stylesheets %}
{% endblock %}


{% block body %}

    <section class="call-to-action" data-aos="fade-zoom-in"
             data-aos-offset="200" data-aos-easing="ease-in-sine"
             data-aos-duration="600">
        <div class="container">
            <div class="row" style="margin:7%;">
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ label }}">
                            {{ flash }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="col-md-12">
                    <img src="{{ asset('/imagenes/subida/406571c157f0b79c55687be3162067cc.jpeg') }}"  alt="Evento" style="width:100%;"/>
                </div>

                <div class="col-md-12">
                    <h2><a href="https://goo.gl/maps/wnQe9wgaFtn" target="_blank">Cómo llegar</a></h2>
                </div>

                {{ form_start(form) }}

                <div class="col-md-12 formEvento" >
                    <div class="col-sm-1 col-md-2">
                        {{ form_label(form.nombre) }}
                        {{ form_errors(form.nombre) }}
                    </div>
                    <div class="col-sm-10 col-md-8">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-sm-1 col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento" >
                    <div class="col-md-2">
                        {{ form_label(form.apellidos) }}
                        {{ form_errors(form.apellidos) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.empresa) }}
                        {{ form_errors(form.empresa) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.empresa, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.cargo) }}
                        {{ form_errors(form.cargo) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.cargo, {required: false, attr: {class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>


                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.direccion) }}
                        {{ form_errors(form.direccion) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.direccion, {required: false, attr: {class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.poblacion) }}
                        {{ form_errors(form.poblacion) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.poblacion, {required: false, attr: {class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.codigopostal) }}
                        {{ form_errors(form.codigopostal) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.codigopostal, {required: false, attr: {class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento"  >
                    <div class="col-md-2">
                        {{ form_label(form.provincia) }}
                        {{ form_errors(form.provincia) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.provincia, {required: false, attr: {class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento" >
                    <div class="col-md-2">
                        {{ form_label(form.telefono) }}
                        {{ form_errors(form.telefono) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="col-md-12 formEvento" >
                    <div class="col-md-2">
                        {{ form_label(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="margen-edit" style="min-height:100px;">
                    <input type="submit" value="Enviar" class="btn btn-default"/>                				
                </div>       

                {{ form_end(form) }}
            </div>
        </div>
    </section>


{% endblock %}
