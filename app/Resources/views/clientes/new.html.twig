{% extends 'base.html.twig' %}

{% block title %}
    Crear nuevo {{coso}}.
{% endblock %}

{% block body %}

    <section class="call-to-action">
        {{ form_start(form) }}
        <div class="container">	
            <div class="row">
                <div class="col-sm-1 col-lg-3"></div>
                <div class="col-xs-12 col-sm-10 col-lg-6">
                    
                    <h2>Crear nuevo {{coso}}.</h2>
                    
                    <div class="margen-new">
                        {{ form_label(form.nombre) }}
                        {{ form_errors(form.nombre) }}

                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="margen-new">
                        {{ form_label(form.rutaimagen) }}
                        {{ form_errors(form.rutaimagen) }}

                        {{ form_widget(form.rutaimagen, { 'attr': {'class': 'anchoTotal'} }) }}
                    </div>

                    <div class="margen-new">
                        {{ form_label(form.activo) }}
                        {{ form_errors(form.activo) }}

                        {{ form_widget(form.activo, { 'attr': {'class': ''} }) }}
                    </div>

                    <div class="margen-edit" style="min-height:100px;">
                        <input type="submit" value="Guardar" class="btn btn-default"/>                				
                    </div>         				
                </div>
                <div class="col-sm-1 col-lg-3"></div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
